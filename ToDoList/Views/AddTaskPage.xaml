<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.Views.AddTaskPage"
             Title="AddTaskPage">
    <VerticalStackLayout>
        <Label Text="Title:" />
        <Entry Placeholder="Enter title" Text="{Binding NewTask.Title}" />

        <Label Text="Description:" />
        <Entry Placeholder="Enter description" Text="{Binding NewTask.Description}" />

        <Button Text="Add" Clicked="OnAddClicked" />
    </VerticalStackLayout>
</ContentPage>