<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ToDoList.ViewModels"
             x:Class="ToDoList.Views.TaskListPage"  
            >


    <StackLayout>
        <ListView x:Name="TaskListView" ItemsSource="{Binding Tasks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding Title}" FontSize="Medium" VerticalOptions="Center" />
                                <Label Text="{Binding Description}" FontSize="Small" VerticalOptions="Center" />
                            </VerticalStackLayout>
                            <Button Text="Edit" Clicked="OnEditTaskClicked" CommandParameter="{Binding}" />
                            <Button Text="Delete" Clicked="OnDeleteTaskClicked" CommandParameter="{Binding}"/>
                        </StackLayout>
                    </ViewCell>
                  
                </DataTemplate>

            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Add Task" Clicked="AddTask_Clicked" />
    </StackLayout>
</ContentPage>
